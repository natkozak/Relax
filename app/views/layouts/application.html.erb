<!DOCTYPE html>
<html>
  <head>
    <title>Relax</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <script>
      window.currentUser = {
        "id": <%= current_user.id %>,
        "email": "<%= current_user.email %>",
        "fullName": "<%= current_user.full_name %>"
      };
      </script>
    <% end %>


  </head>

  <body>
    <%= yield %>
  </body>
</html>
